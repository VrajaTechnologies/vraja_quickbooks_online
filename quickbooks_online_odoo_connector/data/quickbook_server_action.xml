<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="server_action_export_partner_qb" model="ir.actions.server">
            <field name="name">Export Customers &amp; Vendors to QuickBooks</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="state">code</field>
            <field name="code">records.export_customer_to_quickbooks()</field>
        </record>

        <record id="server_action_export_invoice_bill_qb" model="ir.actions.server">
            <field name="name">Export Invoice &amp; Bill to QuickBooks</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="state">code</field>
            <field name="code">records.export_invoice_bill_to_quickbooks()</field>
        </record>

        <record id="server_action_export_payment_qb" model="ir.actions.server">
            <field name="name">Export Payment to QuickBooks</field>
            <field name="model_id" ref="account.model_account_payment"/>
            <field name="binding_model_id" ref="account.model_account_payment"/>
            <field name="state">code</field>
            <field name="code">records.export_payment_to_quickbooks()</field>
        </record>

        <record id="excute_export_moves_to_quickbooks" model="ir.cron">
            <field name="name">Export Invoices/Bills to Quickbooks</field>
            <field name="model_id" ref="quickbooks_online_odoo_connector.model_quickbooks_connect"/>
            <field name="interval_number">5</field>
            <field name="interval_type">days</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="active">True</field>
            <field name="state">code</field>
            <field name="code">model.export_account_moves_to_qbk()</field>
        </record>

    </data>
</odoo>
