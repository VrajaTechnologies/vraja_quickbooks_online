<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_qbo_payment_terms_form" model="ir.ui.view">
        <field name="name">qbo.payment.terms.vts.form</field>
        <field name="model">qbo.payment.terms.vts</field>
        <field name="arch" type="xml">
            <form string="Quickbooks Payments Terms">
                <sheet>
                    <group>
                        <field name="quickbook_payment_id" readonly="1"/>
                        <field name="quickbook_payment_name" readonly="1"/>
                        <field name="partner_id"/>
                        <field name="company_id"/>
                        <field name="qbo_response" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_qbo_payment_terms_list" model="ir.ui.view">
        <field name="name">qbo.payment.terms.vts.list</field>
        <field name="model">qbo.payment.terms.vts</field>
        <field name="arch" type="xml">
            <list string="Quickbooks Account" editable="bottom">
                <field name="quickbook_payment_id" readonly="1"/>
                <field name="quickbook_payment_name" readonly="1"/>
                <field name="partner_id"/>
                <button name="payment_terms_mapping_view" type="object" string="View" class="btn btn-link"/>
            </list>
        </field>
    </record>
</odoo>