<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_qbo_product_form" model="ir.ui.view">
        <field name="name">qbo.product.vts.form</field>
        <field name="model">qbo.product.vts</field>
        <field name="arch" type="xml">
            <form string="Quickbooks Product">
                <sheet>
                    <group>
                        <field name="quickbook_instance_id" readonly="1"/>
                        <field name="quickbook_product_id" readonly="1"/>
                        <field name="quickbook_product_name" readonly="1"/>
                        <field name="product_id"/>
                        <field name="company_id"/>
                        <field name="qbo_response" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_qbo_product_list" model="ir.ui.view">
        <field name="name">qbo.product.vts.list</field>
        <field name="model">qbo.product.vts</field>
        <field name="arch" type="xml">
            <list string="Quickbooks Account" editable="bottom">
                <field name="quickbook_instance_id" readonly="1"/>
                <field name="quickbook_product_id" readonly="1"/>
                <field name="quickbook_product_name" readonly="1"/>
                <field name="product_id"/>
                <button name="product_mapping_view" type="object" string="View" class="btn btn-link"/>
            </list>
        </field>
    </record>
    <record id="action_qbo_product_map" model="ir.actions.act_window">
        <field name="name">Quickbooks Product</field>
        <field name="res_model">qbo.product.vts</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_qbo_product_list"/>
    </record>
    <menuitem id="menu_qbo_product"
              name="Product"
              parent="quickbooks_connector_vts.main_mapping_menu"
              action="action_qbo_product_map" sequence="1"/>
</odoo>