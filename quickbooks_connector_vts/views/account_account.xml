<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_account_acc_qk_inherit_form_view_vts" model="ir.ui.view">
        <field name="name">qk.account.account.form.view.inherit.vts</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="quickbook" string="Quickbooks">
                    <group>
                        <group>
                            <field name="qck_instance_id" readonly="1"/>
                            <field name="quickbooks_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="qk_classification"/>
                            <field name="qk_accountsubType"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="view_account_filter_inherit" model="ir.ui.view">
        <field name="name">account.filter.inherit</field>
        <field name="model">account.account</field>
        <field name="inherit_id" ref="account.view_account_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[1]" position="after">
                <filter string="Quickbook Account" name="quickbook_accounts"
                        domain="[('qck_instance_id', '!=', False)]"/>
                <filter string="Quickbook Account" name="group_by_Quickbook" context="{'group_by':'qck_instance_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>
