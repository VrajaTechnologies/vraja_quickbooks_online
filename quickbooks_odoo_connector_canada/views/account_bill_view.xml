<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_qkb_vendor_bill_ca_form" model="ir.ui.view">
        <field name="name">qbo.vendor.bill.ca.map.form</field>
        <field name="model">qbo.bill.ca.map.vts</field>
        <field name="arch" type="xml">
            <form string="Quickbooks Vendor Bills">
                <sheet>
                    <group>
                        <field name="quickbook_instance_id" readonly="1"/>
                        <field name="quickbook_bill_id" readonly="1"/>
                        <field name="quickbook_bill_number" readonly="1"/>
                        <field name="partner_id"/>
                        <field name="bill_id"/>
                        <field name="company_id"/>
                        <field name="qbo_response" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_qkb_vendor_bill_ca_list" model="ir.ui.view">
        <field name="name">qbo.vendor.bill.ca.map.list</field>
        <field name="model">qbo.bill.ca.map.vts</field>
        <field name="arch" type="xml">
            <list string="Quickbooks Vendor" editable="bottom">
                <field name="quickbook_instance_id" readonly="1"/>
                <field name="quickbook_bill_id" readonly="1"/>
                <field name="quickbook_bill_number" readonly="1"/>
                <field name="partner_id"/>
                <field name="bill_id"/>
                <button name="vendor_bill_mapping_view" type="object" string="View" class="btn btn-link"/>
            </list>
        </field>
    </record>
    <record id="action_qkca_vendor_bill_ca_map" model="ir.actions.act_window">
        <field name="name">Quickbooks Vendor Bill</field>
        <field name="res_model">qbo.bill.ca.map.vts</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_qkb_vendor_bill_ca_list"/>
    </record>
    <menuitem id="menu_qkca_vendor_bill"
              name="Bills"
              parent="quickbooks_connector_vts.main_mapping_menu"
              action="action_qkca_vendor_bill_ca_map" sequence="2"/>
</odoo>