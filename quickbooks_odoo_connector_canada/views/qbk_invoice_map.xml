<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_qbo_invoice_map_form" model="ir.ui.view">
        <field name="name">qbo.invoice.map.vts.form</field>
        <field name="model">qbo.invoice.map.vts</field>
        <field name="arch" type="xml">
            <form string="QuickBooks Invoice Map">
                <sheet>
                    <group>
                        <field name="quickbook_instance_id" readonly="1"/>
                        <field name="qbk_invoice_id" readonly="1"/>
                        <field name="quickbook_invoice_number" readonly="1"/>
                        <field name="customer_id"/>
                        <field name="invoice_id"/>
                        <field name="company_id"/>
                        <field name="qbo_response" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_qbo_invoice_map_list" model="ir.ui.view">
        <field name="name">qbo.invoice.map.vts.list</field>
        <field name="model">qbo.invoice.map.vts</field>
        <field name="arch" type="xml">
            <list string="QuickBooks Invoice" editable="bottom">
                <field name="quickbook_instance_id" readonly="1"/>
                <field name="qbk_invoice_id" readonly="1"/>
                <field name="quickbook_invoice_number" readonly="1"/>
                <field name="customer_id"/>
                <field name="invoice_id"/>
                <button name="invoice_mapping_view" type="object" string="View" class="btn btn-link"/>
            </list>
        </field>
    </record>

    <record id="action_qbo_invoice_map" model="ir.actions.act_window">
        <field name="name">QuickBooks Invoice</field>
        <field name="res_model">qbo.invoice.map.vts</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_qbo_invoice_map" name="Invoices"
            parent="quickbooks_connector_vts.main_mapping_menu"
            action="action_qbo_invoice_map"
            sequence="3"/>
</odoo>