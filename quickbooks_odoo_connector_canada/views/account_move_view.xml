<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="qk_account_move_inherit_form_view_vts" model="ir.ui.view">
        <field name="name">qk.account.move.form.view.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position='inside'>
                <page string="Quickbooks">
                    <group>
                        <field name="qck_instance_id"/>
                        <field name="qkca_invoice_ID" readonly="1"/>
                        <field name="qck_invoice_doc" readonly="1"/>
                        <field name="qkca_bill_ID" readonly="1"/>
                        <field name="qck_bill_doc" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!--    Quickbook Filter for Invoices -->
    <record id="view_invoice_filter" model="ir.ui.view">
        <field name="name">invoice.filter.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='late']" position="after">
                <separator/>
                <filter string="Quickbook Invoices"
                        name="quickbook_invoices"
                        domain="[('qkca_invoice_ID', '!=', False)]"/>
            </xpath>
            <xpath expr="//filter[@name='group_by_company']" position="after">
                <separator/>
                <filter string="Quickbooks Invoices" name="group_by_quickbook_invoice"
                        context="{'group_by':'qck_instance_id'}"/>
            </xpath>
        </field>
    </record>

    <!--    Quickbook Filter for customer payment-->
    <record id="view_bill_filter" model="ir.ui.view">
        <field name="name">Bills.filter.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_bill_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='quickbook_invoices']" position="after">
                <filter string="Quickbook Bills"
                        name="quickbook_bills"
                        domain="[('qkca_bill_ID', '!=', False)]"/>
            </xpath>
            <xpath expr="//filter[@name='group_by_quickbook_invoice']" position="after">
                <filter string="Quickbooks Bills" name="group_by_quickbook_bill"
                        context="{'group_by':'qck_instance_id'}"/>
            </xpath>
        </field>
    </record>
</odoo>