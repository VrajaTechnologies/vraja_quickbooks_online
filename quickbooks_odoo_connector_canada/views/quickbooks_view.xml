<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="quick_canada_form_inherit_vts" model="ir.ui.view">
        <field name="name">quickbooks.connect.ca.inherit.form</field>
        <field name="model">quickbooks.connect</field>
        <field name="inherit_id" ref="quickbooks_connector_vts.quickbooks_connect_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='import_configuration']/group/group[1]" position="inside">
                <field name="qkca_product_creation"/>
                <field name="qkca_vendor_creation"/>
                <field name="qkca_category_creation"/>
                <field name="qkca_invoice_creation"/>
            </xpath>
            <xpath expr="//sheet/div[@name='button_box']" position="inside">
                <button name="action_qkb_product"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-shopping-cart">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Product</span>
                        <span class="o_stat_value">
                            <field name="qca_product_count"/>
                        </span>
                    </div>
                </button>
                <button name="action_qkb_vendor"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-industry">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Vendor</span>
                        <span class="o_stat_value">
                            <field name="qca_vendor_count"/>
                        </span>
                    </div>
                </button>
                <button name="action_qkb_invoice"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-dollar">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_text">Invoice</span>
                        <span class="o_stat_value">
                            <field name="qca_invoice_count"/>
                        </span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
