<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="product_template_qk_inherit_form_view_vts" model="ir.ui.view">
        <field name="name">qk.product.template.form.view.inherit.vts</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="quickbook_product" string="Quickbooks">
                    <group>
                        <field name="qck_instance_id"/>
                        <field name="qkca_product_type" readonly="1"/>
                        <field name="qkca_product_ID" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
    <record id="qck_product_template_filter" model="ir.ui.view">
        <field name="name">product.filter.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='activities_exception']" position="after">
                <separator/>
                <filter string="Quickbook Product"
                        name="quickbook_product"
                        domain="[('qck_instance_id', '!=', False)]"/>
            </xpath>
            <xpath expr="//filter[@name='categ_id']" position="after">
                <separator/>
                <filter string="Quickbooks product" name="group_by_quickbook_product"
                        context="{'group_by':'qck_instance_id'}"/>
            </xpath>
        </field>
    </record>

</odoo>